{{#if manager}}
<div class="admin-container">
    <div class="container-fluid">
        <div class="row py-3">
            <div class="col-md-12 fw-bold fs-3">Orden </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        Detalle de la orden
                    </div>
                    <div class="card-body">
                        <table class="table table-hover align-middle" id="order-detail-table">
                            <thead>
                                <tr class="text-center">
                                    <th>ID</th>
                                    <th>Platillo</th>
                                    <th>Cantidad</th>
                                    <th>Imagen</th>
                                    <th>Descripci√≥n</th>
                                </tr>
                            </thead>
                            <tbody id="order-detail-list">
                                {{#each products}}
                                    <tr class="text-center">
                                        <td>{{this.product.id_product}}</td>
                                        <td>{{this.product.name}}</td>
                                        <td>{{this.quantity}}</td>                                        
                                        <td><img src="/{{this.product.image}}" class="img-thumbnail" alt="{{this.product.name}}" width="150px"></td>
                                        <td>{{this.product.description}}</td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}

