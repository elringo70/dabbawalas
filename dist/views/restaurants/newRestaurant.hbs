{{>sidebar}}
<div class="admin-container">
    <div class="container-fluid">
        <form id="form" action="/api/restaurants/postNewRestaurant" method="POST">
            <div class="row mb-4">
                <div class="col-md-12 fw-bold fs-3">Registro de nuevo restaurant</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3">
                    <label for="name" class="form-label">Nombre del restaurante</label>
                    <input type="text" name="name" class="form-control" id="name" placeholder="Nombre del restaurante"
                        required>
                </div>
                <div class="col-md-3">
                    <label for="type" class="form-label">Tipo de restaurante</label>
                    <input type="text" name="type" class="form-control" id="type" placeholder="Tipo de restaurante"
                        required>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-12 fw-bold fs-3">Horario</div>
            </div>

            <div class="row">
                <div class="col-md-2 mb-3">
                    <label for="end" class="form-label">Día</label>
                    <div class="form-control">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" name="days" type="checkbox" id="inlineCheckBoxDays1"
                                value="1">
                            <label class="form-check-label" for="inlineCheckBoxDays1">Lunes</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <label for="openhours" class="form-label">Horario de apertura</label>
                    <input type="time" name="openhours" class="form-control" id="openhours1" disabled>
                </div>
                <div class="col-md-2 mb-3">
                    <label for="closinghours" class="form-label">Horario de cierre</label>
                    <input type="time" name="closinghours" class="form-control" id="closinghours1" disabled>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 mb-3">
                    <div class="form-control">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" name="days" type="checkbox" id="inlineCheckBoxDays1"
                                value="2">
                            <label class="form-check-label" for="inlineCheckBoxDays1">Martes</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <input type="time" name="openhours" class="form-control" id="openhours2" disabled>
                </div>
                <div class="col-md-2 mb-3">
                    <input type="time" name="closinghours" class="form-control" id="closinghours2" disabled>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2 mb-3">
                    <div class="form-control">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" name="days" type="checkbox" id="inlineCheckBoxDays1"
                                value="3">
                            <label class="form-check-label" for="inlineCheckBoxDays1">Miércoles</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <input type="time" name="openhours" class="form-control" id="openhours3" disabled>
                </div>
                <div class="col-md-2 mb-3">
                    <input type="time" name="closinghours" class="form-control" id="closinghours3" disabled>
